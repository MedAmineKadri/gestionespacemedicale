    <link href="{{ asset('bf/vendor/datepicker/daterangepicker.css') }}" rel="stylesheet" media="all">

    <!-- Main CSS-->
    <link href="{{ asset('bf/css/main.css') }}" rel="stylesheet" media="all">
</head>

<body>
<div class="page-wrapper bg-gra-02 p-t-130 p-b-100 font-poppins">
    <div class="wrapper wrapper--w680">
        <div class="card card-10">
            <div class="card-body">
                <form type="text" name="date" >
                    <input type="submit" value="recherche" >




                </form>



                <table class="table">


                    <thead>
                    <style>
                        table {
                            width: 100%;
                            background-color: yellow;

                            border: 1px solid black;
                        }
                        th, td {
                            padding: 15px;
                            text-align: left;
                            border-bottom: 1px solid #ddd;

                        }
                    </style>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Firstname</th>
                <th>Lastname</th>
                <th>Date</th>

            </tr>
        </thead>
        <tbody>
        {% for do in dos %}
            <tr>
                <td>{{ do.id }}</td>
                <td>{{ do.firstname }}</td>
                <td>{{ do.lastname }}</td>
                <td>{{ do.date }}</td>
                <td>
                    <a href="{{ path('dos_show', {'id': do.id}) }}">consult</a>
                    <a href="{{ path('dos_edit', {'id': do.id}) }}">update</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('dos_new') }}">new folder</a>
